as array buffer


var file=document.getElementById('img').files[0];


    var reader=new FileReader();


    reader.onloadend = function(e){
        console.log(e.target.result.byteLength);
        $scope.image = e.target.result;
    }

    reader.readAsArrayBuffer(file);
